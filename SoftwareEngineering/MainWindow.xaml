<Window x:Class="SoftwareEngineering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareEngineering"
        mc:Ignorable="d"
        Title="MainWindow" Background="Aqua"
         WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        >
    <Grid>
        <Frame x:Name="MainW"></Frame>
        <Button Content="Login" Width="400" Height="80" FontSize="37" FontStyle="Italic" Margin="300,230,780,120" 
                Click="LoginClick" BorderThickness="2" FontWeight="Bold"/>
        <Button Content="Sign in" Width="400" FontSize="37" Height="80" FontStyle="Italic" Margin="300,150,780,200"
                  Click="SignInClick" BorderThickness="2" FontWeight="Bold"/>

        <Button Content="Guest" FontSize="37" FontStyle="Italic" Width="400" Height="160" Margin="460,150,140,120"
                Click="GuestClick"   BorderThickness="2" FontWeight="Bold"  />
        <Button Content="X" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Red" FontWeight="Bold" FontSize="14" Click="closeMainWindow"></Button>

        <Frame x:Name="Guest"></Frame>
        <Frame x:Name="Login" ></Frame>
        <Frame x:Name="Signin"  ></Frame>
    </Grid>
</Window>
