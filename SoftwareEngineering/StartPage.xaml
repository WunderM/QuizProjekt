<Page x:Class="SoftwareEngineering.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login"
    Background="{StaticResource BackgroundBrush}">
    <Grid>
        <!-- Navigation Buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Login"
                        Style="{StaticResource LoginButtonStyle}"
                        Width="400"
                        Height="100"
                        Click="LoginClick" />
            </Border>

            
            <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Sign in"
                        Style="{StaticResource LoginButtonStyle}"
                        Width="400"
                        Height="100"
                        Click="SignInClick" />
            </Border>

            <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Guest"
                        Style="{StaticResource LoginButtonStyle}"
                        Width="400"
                        Height="160"
                        Click="GuestClick" />
            </Border>
        </StackPanel>
    </Grid>
</Page>
