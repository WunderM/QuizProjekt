<Window x:Class="SoftwareEngineering.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="800" Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <TextBlock Text="Welcome Back!" Style="{StaticResource TitleTextBlockStyle}" Margin="0,20,0,0" />

        <TextBlock Text="Username:" Style="{StaticResource LabelTextBlockStyle}" Margin="100,0,0,130" />
        <TextBox x:Name="LoginName" Style="{StaticResource StandardTextBoxStyle}" Margin="220,0,0,130" />

        <TextBlock Text="Password:" Style="{StaticResource LabelTextBlockStyle}" Margin="100,0,0,50" />
        <PasswordBox x:Name="LoginPassword" Style="{StaticResource StandardPasswordBoxStyle}" Margin="220,0,0,50" />

        <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0">
            <Button Content="Log In" x:Name="Enter" Style="{StaticResource LoginButtonStyle}" Click="LogIn" />
        </Border>
    </Grid>
</Window>
