<Page x:Class="SoftwareEngineering.EndPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EndPage">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <!-- Punktestand -->
        <TextBlock Text="Spiel beendet!" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" />
        <TextBlock x:Name="ScoreText" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,40" />

        <!-- Buttons für Optionen -->
        <Button Content="Noch eine Runde spielen" Width="200" Height="50" Click="PlayAgainClick" Margin="0,0,0,20" />
        <Button Content="Beenden" Width="200" Height="50" Click="ExitClick" />
    </StackPanel>
</Page>
