<Page x:Class="SoftwareEngineering.Questions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="450" Width="800"
      
      Title="Questions">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
        <!-- Titel der Kategorie -->
        <TextBlock x:Name="CategoryTitle" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

        <!-- Frage -->
        <TextBlock x:Name="QuestionText" FontSize="20" TextWrapping="Wrap" Margin="0,0,0,20" />

        <!-- Antwortmöglichkeiten -->
        <Button x:Name="AnswerButton1" Content="Antwort 1" Margin="5" Click="AnswerClick" />
        <Button x:Name="AnswerButton2" Content="Antwort 2" Margin="5" Click="AnswerClick" />
        <Button x:Name="AnswerButton3" Content="Antwort 3" Margin="5" Click="AnswerClick" />
        <Button x:Name="AnswerButton4" Content="Antwort 4" Margin="5" Click="AnswerClick" />

        <!-- Fortschritt -->
        <TextBlock x:Name="ProgressText" FontSize="16" FontWeight="Medium" Margin="0,20,0,0" />
    </StackPanel>
</Page>
