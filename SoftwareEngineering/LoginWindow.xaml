<Window x:Class="SoftwareEngineering.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareEngineering"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="800" Background="#F3F4F6">
    <Grid Margin="20">
        <!-- Titel -->
        <TextBlock Text="Welcome Back!" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="#2C3E50" Margin="0,20,0,0" />

        <!-- Name Label und Textbox -->
        <TextBlock Text="Username:" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" FontWeight="SemiBold" Foreground="#34495E" Margin="100,0,0,130" />
        <TextBox x:Name="LoginName" Height="40" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="220,0,0,130"
            Background="#E8F0FE" BorderBrush="#B0BEC5" BorderThickness="1" FontSize="18" Padding="10" />

        <!-- Passwort Label und Textbox -->
        <TextBlock Text="Password:" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" FontWeight="SemiBold" Foreground="#34495E" Margin="100,0,0,50" />
        <PasswordBox x:Name="LoginPassword" Height="40" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="220,0,0,50"
            Background="#E8F0FE" BorderBrush="#B0BEC5" BorderThickness="1" FontSize="18" Padding="10" />

        <!-- Login Button mit Border für CornerRadius -->
        <Border CornerRadius="8" Background="#2ECC71" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0">
            <Button Content="Log In" x:Name="Enter" Width="200" Height="50"
                    Background="Transparent" Foreground="White" FontSize="20" FontWeight="Bold" BorderThickness="0" Click="LogIn">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="10" Color="#34495E" />
                </Button.Effect>
            </Button>
        </Border>
    </Grid>
</Window>
