<Window x:Class="SoftwareEngineering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Background="{StaticResource BackgroundBrush}"
        WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize">

    <Grid>
        <!-- Grid Definitions for Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Top Row for Close Button -->
            <RowDefinition Height="*" />   <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />  <!-- Navigations-Buttons -->
                <ColumnDefinition Width="*" />    <!-- Icon -->
                <ColumnDefinition Width="Auto" /> <!-- Logout-Button -->
            </Grid.ColumnDefinitions>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0">
                <Button Content="Home"
                        Style="{StaticResource NavigationButtonStyle}"
                        Click="HomeClick" />
                <Button Content="About"
                        Style="{StaticResource NavigationButtonStyle}"
                        Click="AboutClick" />
                <Button Content="Help"
                        Style="{StaticResource NavigationButtonStyle}"
                        Click="HelpClick" />
            </StackPanel>

            <!-- Logo/Icon -->
            <Image Grid.Column="1" Source="{StaticResource LogoImage}"
                Width="40" Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0">
                <Button Content="Logout"
                    Style="{StaticResource NavigationButtonStyle}"
                    Click="LogoutClick" />
                    <Button Content="X"
                    Style="{StaticResource CloseButtonStyle}"
                    Click="closeMainWindow"/>
            </StackPanel>

            
        </Grid>
        
        <!-- Hauptinhalt -->
        <Grid Grid.Row="1" Background="{StaticResource BackgroundBrush}">
            <!-- Navigation Buttons -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Login"
                                Style="{StaticResource LoginButtonStyle}"
                                Width="400"
                                Height="100"
                                Click="LoginClick" />
                </Border>

                
                <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Sign in"
                                Style="{StaticResource LoginButtonStyle}"
                                Width="400"
                                Height="100"
                                Click="SignInClick" />
                </Border>

                <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Guest"
                                Style="{StaticResource LoginButtonStyle}"
                                Width="400"
                                Height="160"
                                Click="GuestClick" />
                </Border>
            </StackPanel>

            <!-- Frames for Content -->
            <Frame x:Name="MainW" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <Frame x:Name="Guest" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" />
            <Frame x:Name="Login" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" />
            <Frame x:Name="Signin" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" />
        </Grid>
    </Grid>
</Window>
