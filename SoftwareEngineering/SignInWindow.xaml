<Window x:Class="SoftwareEngineering.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareEngineering"
        mc:Ignorable="d"
        Title="SignInWindow" Height="450" Width="800" Background="Aqua">
    <Grid>
        <Frame x:Name="SiIn"></Frame>
        <TextBlock Text="Sign in" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" />
        <Button Content="Name:" FontSize="22" BorderThickness="0" Background="DeepSkyBlue" Height="50" Width="150" Margin="184,167,466,217" FontWeight="Bold" FontStyle="Italic"/>
        <Button Content="Password:" FontSize="22" BorderThickness="0" Background="DeepSkyBlue" Height="50" Width="150" Margin="184,222,466,162" FontWeight="Bold" FontStyle="Italic"></Button>
        <TextBox x:Name="SigninName"  Background="LightSlateGray" BorderThickness="0" Height="50" Width="150" Margin="334,167,316,217" FontWeight="Bold" FontStyle="Italic" FontSize="20" TextAlignment="Center" TextChanged="SigninName_TextChanged" ></TextBox>
        <TextBox x:Name="SigninPassword"  Background="LightSlateGray" BorderThickness="0" Height="50"  Width="150" Margin="334,222,316,162" FontWeight="Bold" FontStyle="Italic" TextAlignment="Center" FontSize="20" TextChanged="SigninPassword_TextChanged" />
        <Button Content="Join us" FontSize="50" x:Name="Enter" Width="200" Height="108" Margin="499,167,101,159" Background="LightGreen" Click="EnterSignIn" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
           
        </Button>
    </Grid>
</Window>
