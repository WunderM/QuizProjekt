<Window x:Class="SoftwareEngineering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Background="{StaticResource BackgroundBrush}"
        WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize">
    <Grid>
        <!-- Grid Definitions for Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Top Row for Close Button -->
            <RowDefinition Height="*" />   <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Schließen-Button oben rechts -->
        <Button Content="X"
                Style="{StaticResource CloseButtonStyle}"
                Click="closeMainWindow" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Grid.Row="0"
                Margin="10" />

        <!-- Hauptinhalt -->
        <Grid Grid.Row="1" Background="{StaticResource BackgroundBrush}">
            <!-- Navigation Buttons -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Login"
                                Style="{StaticResource LoginButtonStyle}"
                                Width="400"
                                Height="100"
                                Click="LoginClick" />
                </Border>

                
                <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Sign in"
                                Style="{StaticResource LoginButtonStyle}"
                                Width="400"
                                Height="100"
                                Click="SignInClick" />
                </Border>

                <Border CornerRadius="8" Background="{StaticResource PrimaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="Guest"
                                Style="{StaticResource LoginButtonStyle}"
                                Width="400"
                                Height="160"
                                Click="GuestClick" />
                </Border>
            </StackPanel>

            <!-- Frames for Content -->
            <Frame x:Name="MainW" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <Frame x:Name="Guest" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" />
            <Frame x:Name="Login" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" />
            <Frame x:Name="Signin" Background="{StaticResource BackgroundBrush}" Visibility="Collapsed" />
        </Grid>
    </Grid>
</Window>
